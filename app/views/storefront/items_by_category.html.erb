<h1>Storefront#items_by_category</h1>
<p>Find me in app/views/storefront/items_by_category.html.erb</p>

<div class="row">
	<% @products_by_cat.each do | item | %>
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-body">
					<div style="height:150px;" align="center">
						<%= image_tag item.image.url(:thumb) %>
					</div>
					<p><a href="#">
						<!-- Button trigger modal -->
						<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal_<%= item.id %>"><span class="glyphicon glyphicon-plus"></span> quick info</button>
					</a></p>
					<p><b><%= number_to_currency(item.price) %></b></p>
					<p><%= item.name %></p>
					<p>Made by: <%= item.brand %></p>
					<div style="height:150px;">
						<p><%= item.description %></p>
					</div>
				</div>
			</div>
		</div>
		<!-- Modal -->
		<div class="modal fade" id="myModal_<%= item.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="myModalLabel"><%= item.name %></h4>
		      </div>
		      <div class="modal-body">
		        <p><%= number_to_currency(item.price) %></p>
		        <p><%= item.description %></p>
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		        <button type="button" class="btn btn-primary">Save changes</button>
		      </div>
		    </div>
		  </div>
		</div>
	<%end%>
</div>